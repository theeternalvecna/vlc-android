<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:key="subscription_preferences">

    <ListPreference
            android:defaultValue="true"
            android:entries="@array/subscription_notification"
            android:entryValues="@array/subscription_notification_values"
            android:key="subscription_enable_notification"
            android:summary="%s"
            android:title="@string/subscription_notification"
            app:iconSpaceReserved="false"
            app:singleLineTitle="false" />
    <PreferenceCategory android:title="@string/download">

        <org.videolan.vlc.gui.view.SubscriptionNumberPreference
                android:defaultValue="0"
                android:summary="%ss"
                app:key="subscription_nb_cache_media"
                app:title="@string/subscription_nb_download" />
        <org.videolan.vlc.gui.view.SubscriptionFileSizePreference
                android:defaultValue="500000000"
                android:summary="%ss"
                app:key="subscription_max_cache_size"
                app:title="@string/subscription_max_cache_size" />

    </PreferenceCategory>
</androidx.preference.PreferenceScreen>
