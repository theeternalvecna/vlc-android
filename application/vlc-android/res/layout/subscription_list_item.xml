<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:vlc="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />

        <import type="android.text.TextUtils" />

        <variable
                name="media"
                type="org.videolan.vlc.media.SubscriptionEpisode" />

        <variable
                name="inSelection"
                type="boolean" />

        <variable
                name="selected"
                type="boolean" />

        <variable
                name="seen"
                type="long" />

        <variable
                name="cover"
                type="android.graphics.drawable.BitmapDrawable" />

        <variable
                name="scaleType"
                type="android.widget.ImageView.ScaleType" />

        <variable
                name="holder"
                type="org.videolan.vlc.gui.discover.DiscoverAdapter.ViewHolder" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            selected="@{selected}"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/video_list_background"
            android:clickable="true"
            android:clipToPadding="false"
            android:focusable="true"
            android:longClickable="true"
            android:onClick="@{holder::onClick}"
            android:onLongClick="@{holder::onLongClick}"
            android:orientation="horizontal"
            vlc:mediaContentDescription="@{media}">

        <com.google.android.material.card.MaterialCardView
                android:id="@+id/container"
                style="@style/VLCCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                android:importantForAccessibility="no"
                android:longClickable="true"
                android:onClick="@{holder::onClick}"
                android:onLongClick="@{holder::onLongClick}"
                vlc:layout_constraintStart_toStartOf="parent"
                vlc:layout_constraintTop_toBottomOf="@+id/ml_item_title">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <!-- Image loading is handled by org.videolan.vlc.gui.helpers.ImageLoader.loadImage() -->


                <ImageView
                        android:id="@+id/ml_item_thumbnail"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:scaleType="centerCrop"
                        android:src="@{cover}"
                        tools:src="@tools:sample/backgrounds/scenic"
                        vlc:layout_constraintBottom_toBottomOf="parent"
                        vlc:layout_constraintStart_toStartOf="parent"
                        vlc:layout_constraintTop_toTopOf="parent"
                        vlc:layout_constraintVertical_bias="0.0"
                        vlc:media="@{media}" />

                <ImageView
                        android:id="@+id/ml_item_overlay"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:scaleType="fitXY"
                        android:visibility="gone"
                        vlc:layout_constraintBottom_toBottomOf="@+id/ml_item_thumbnail"
                        vlc:layout_constraintEnd_toEndOf="@+id/ml_item_thumbnail"
                        vlc:layout_constraintStart_toStartOf="@+id/ml_item_thumbnail"
                        vlc:layout_constraintTop_toTopOf="@+id/ml_item_thumbnail" />

                <ImageView
                        android:id="@+id/ml_item_seen3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="4dp"
                        android:background="@drawable/rounded_corners_black_more_transparent"
                        android:padding="3dp"
                        android:visibility="@{seen == 0L ? View.GONE : View.VISIBLE, default=gone}"
                        tools:visibility="visible"
                        vlc:layout_constraintEnd_toEndOf="parent"
                        vlc:layout_constraintTop_toTopOf="parent"
                        vlc:layout_goneMarginStart="4dp"
                        vlc:srcCompat="@drawable/ic_check" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
                android:id="@+id/ml_item_title"
                style="@style/VLC.TextViewTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="4dp"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lineSpacingMultiplier="1"
                android:text="@{media.title}"
                android:textColor="?attr/font_default"
                android:textSize="16sp"
                tools:text="Star wars Episode 1"
                vlc:layout_constraintEnd_toStartOf="@+id/item_more"
                vlc:layout_constraintHorizontal_bias="1.0"
                vlc:layout_constraintStart_toStartOf="@+id/container"
                vlc:layout_constraintTop_toTopOf="parent"
                vlc:layout_constraintVertical_chainStyle="packed" />

        <ImageView
                android:id="@+id/item_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:contentDescription="@string/more_actions"
                android:importantForAccessibility="yes"
                android:onClick="@{holder::onMoreClick}"
                android:padding="8dp"
                android:scaleType="center"
                android:visibility="@{!inSelection ? View.VISIBLE : View.INVISIBLE}"
                vlc:layout_constraintBottom_toBottomOf="parent"
                vlc:layout_constraintEnd_toEndOf="parent"
                vlc:srcCompat="@drawable/ic_more" />

        <TextView
                android:id="@+id/textView37"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="2dp"
                android:maxLines="1"
                android:text="@{media.subsText()}"
                android:textColor="?attr/font_default"
                tools:text="Subscription title"
                vlc:layout_constraintBottom_toTopOf="@+id/textView38"
                vlc:layout_constraintEnd_toStartOf="@+id/item_more"
                vlc:layout_constraintHorizontal_bias="0.5"
                vlc:layout_constraintStart_toEndOf="@+id/container"
                vlc:layout_constraintTop_toTopOf="@+id/container"
                vlc:layout_constraintVertical_chainStyle="packed" />

        <TextView
                android:id="@+id/textView38"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:drawableStart="@drawable/ic_clock"
                android:drawablePadding="4dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_vertical"
                android:text="@{media.releaseDate(textView38)}"
                android:textColor="?attr/font_default"
                tools:text="Today"
                vlc:layout_constraintBottom_toBottomOf="@+id/container"
                vlc:layout_constraintEnd_toEndOf="@+id/textView37"
                vlc:layout_constraintHorizontal_bias="0.5"
                vlc:layout_constraintStart_toStartOf="@+id/textView37"
                vlc:layout_constraintTop_toBottomOf="@+id/textView37" />

        <ImageView
                android:id="@+id/selected_check"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:visibility="@{selected ? View.VISIBLE : View.GONE}"
                vlc:layout_constraintBottom_toBottomOf="parent"
                vlc:layout_constraintEnd_toEndOf="parent"
                vlc:layout_constraintTop_toTopOf="parent"
                vlc:srcCompat="@drawable/ic_video_grid_check" />

        <TextView
                android:id="@+id/textView39"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rounded_play_sub"
                android:drawableStart="@drawable/ic_play_sub"
                android:gravity="center_vertical"
                android:onClick="@{holder::onPlayClick}"
                android:paddingTop="4dp"
                android:paddingEnd="12dp"
                android:paddingBottom="4dp"
                android:text="@{media.dateDuration()}"
                vlc:layout_constraintBottom_toTopOf="@+id/view3"
                vlc:layout_constraintStart_toStartOf="@+id/container"
                vlc:layout_constraintTop_toBottomOf="@+id/container" />

        <ImageView
                android:id="@+id/textView40"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/round_play_sub"
                android:onClick="@{holder::onPlayClick}"
                android:scaleType="center"
                android:src="@drawable/ic_sub_download"
                vlc:layout_constraintBottom_toBottomOf="@+id/textView39"
                vlc:layout_constraintStart_toEndOf="@+id/textView39"
                vlc:layout_constraintTop_toBottomOf="@+id/container"
                vlc:layout_constraintVertical_bias="1.0" />

        <ImageView
                android:id="@+id/textView41"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/round_play_sub"
                android:enabled="@{!media.inPlayQueue}"
                android:onClick="@{holder::onAddPlayQueueClick}"
                android:scaleType="center"
                android:src="@drawable/ic_sub_addtoplaylist"
                vlc:layout_constraintBottom_toBottomOf="@+id/textView39"
                vlc:layout_constraintStart_toEndOf="@+id/textView40"
                vlc:layout_constraintTop_toBottomOf="@+id/container"
                vlc:layout_constraintVertical_bias="1.0" />

        <ImageView
                android:id="@+id/selected_check2"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:visibility="@{media.inPlayQueue ? View.VISIBLE : View.GONE}"
                vlc:layout_constraintBottom_toBottomOf="@+id/textView41"
                vlc:layout_constraintEnd_toEndOf="@+id/textView41"
                vlc:srcCompat="@drawable/ic_video_grid_check" />

        <View
                android:id="@+id/view3"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="?attr/default_separator"
                android:visibility="@{!selected ? View.VISIBLE : View.INVISIBLE}"
                vlc:layout_constraintBottom_toBottomOf="parent"
                vlc:layout_constraintEnd_toEndOf="parent"
                vlc:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
